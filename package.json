    "react-router-dom": "^6.8.0",
    "react-scripts": "^5.0.1",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.22.0",
